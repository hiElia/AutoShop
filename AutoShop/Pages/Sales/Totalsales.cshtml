@page
@model AutoShop.Pages.Sales.TotalsalesModel
@{
}
<h1>Total sales</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control"
                   asp-for="SearchTerm">
            <span class="input-group-btn">
                <button class=" btn btn-default">
                    <i class="glyphicon glyphicon-search"> </i>
                </button>
            </span>
        </div>
    </div>
</form>
@foreach (var sale in Model.Sales)
{
    <div>@sale.employee_id</div>

}

<a asp-page=".\Edit" class="btn btn-primary">Add page</a>
@section footer{
    <div>
        @Model.Message

    </div>
}

